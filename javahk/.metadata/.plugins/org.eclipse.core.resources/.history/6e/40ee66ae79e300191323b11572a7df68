package test;

public class test_p39 {
	public static void main(String[] args)
	{
		int d=4;
		float pi =3.14;
		
		System.out.println("直徑是"+d+"公分的圓");
		System.out.println("其圓周為"+pi+"公分");
		
		int num1 =10;
		int num2 =15;
		
		double div1 = num1/num2;
		double div2 = (double)num1/(double)num2;
		
		System.out.println("10/15的商數為"+div1);
		System.out.println("10/15的餘數為"+div2);
		
	
	}

}
